#!/bin/bash
set -e

# HelixCode Docker Facade Script
# This script provides a unified interface to interact with the HelixCode Docker container

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
HELIX_ROOT="$SCRIPT_DIR"

# Default configuration
DEFAULT_API_PORT=8080
DEFAULT_SSH_PORT=2222
DEFAULT_WEB_PORT=3000
DEFAULT_NETWORK_MODE="standalone"

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Function to print colored output
print_info() { echo -e "${BLUE}‚ÑπÔ∏è  $1${NC}"; }
print_success() { echo -e "${GREEN}‚úÖ $1${NC}"; }
print_warning() { echo -e "${YELLOW}‚ö†Ô∏è  $1${NC}"; }
print_error() { echo -e "${RED}‚ùå $1${NC}"; }
print_debug() { echo -e "${CYAN}üêõ $1${NC}"; }

# Function to check if Docker is running
check_docker() {
    if ! command -v docker &> /dev/null; then
        print_error "Docker is not installed or not in PATH"
        exit 1
    fi
    
    if ! docker info &> /dev/null; then
        print_error "Docker daemon is not running"
        exit 1
    fi
}

# Function to check if Docker Compose is available
check_docker_compose() {
    if ! command -v docker-compose &> /dev/null && ! docker compose version &> /dev/null; then
        print_error "Docker Compose is not available"
        exit 1
    fi
}

# Function to get docker compose command
get_compose_cmd() {
    if command -v docker-compose &> /dev/null; then
        echo "docker-compose"
    elif docker compose version &> /dev/null; then
        echo "docker compose"
    else
        print_error "Docker Compose is not available"
        exit 1
    fi
}

# Function to load environment variables
load_env() {
    local env_file="$HELIX_ROOT/.env"
    
    if [ -f "$env_file" ]; then
        print_info "Loading environment from $env_file"
        set -a
        source "$env_file"
        set +a
    else
        print_warning "No .env file found. Using defaults and current environment."
    fi
}

# Function to check if container is running
is_container_running() {
    docker ps --format "table {{.Names}}" | grep -q "^helixcode$"
}

# Function to get container status
get_container_status() {
    if is_container_running; then
        echo "running"
    elif docker ps -a --format "table {{.Names}}" | grep -q "^helixcode$"; then
        echo "stopped"
    else
        echo "not_created"
    fi
}

# Function to find available port
find_available_port() {
    local base_port=$1
    local port=$base_port
    
    while nc -z 127.0.0.1 $port 2>/dev/null; do
        port=$((port + 1))
        if [ $port -gt $((base_port + 100)) ]; then
            print_error "Could not find available port starting from $base_port"
            exit 1
        fi
    done
    echo $port
}

# Function to start the HelixCode container
start_container() {
    local compose_cmd=$(get_compose_cmd)
    
    print_info "Starting HelixCode container..."
    
    # Check if ports are available, adjust if needed
    local api_port=${HELIX_API_PORT:-$DEFAULT_API_PORT}
    local ssh_port=${HELIX_SSH_PORT:-$DEFAULT_SSH_PORT}
    local web_port=${HELIX_WEB_PORT:-$DEFAULT_WEB_PORT}
    
    if [ "${HELIX_AUTO_PORT:-false}" = "true" ]; then
        api_port=$(find_available_port $api_port)
        ssh_port=$(find_available_port $ssh_port)
        web_port=$(find_available_port $web_port)
        export HELIX_API_PORT=$api_port
        export HELIX_SSH_PORT=$ssh_port
        export HELIX_WEB_PORT=$web_port
        print_info "Auto-port assignment:"
        print_info "  API: $api_port, SSH: $ssh_port, Web: $web_port"
    fi
    
    # Create necessary directories
    mkdir -p "$HELIX_ROOT/workspace" "$HELIX_ROOT/projects" "$HELIX_ROOT/shared"
    
    # Start services
    $compose_cmd -f "$HELIX_ROOT/docker-compose.helix.yml" up -d
    
    # Wait for services to be healthy
    print_info "Waiting for services to be ready..."
    sleep 10
    
    # Display connection information
    display_connection_info
}

# Function to stop the container
stop_container() {
    local compose_cmd=$(get_compose_cmd)
    
    print_info "Stopping HelixCode container..."
    $compose_cmd -f "$HELIX_ROOT/docker-compose.helix.yml" down
    print_success "HelixCode container stopped"
}

# Function to restart the container
restart_container() {
    stop_container
    start_container
}

# Function to display connection information
display_connection_info() {
    local api_port=${HELIX_API_PORT:-$DEFAULT_API_PORT}
    local ssh_port=${HELIX_SSH_PORT:-$DEFAULT_SSH_PORT}
    local web_port=${HELIX_WEB_PORT:-$DEFAULT_WEB_PORT}
    
    echo ""
    echo "üöÄ HelixCode is now running!"
    echo "============================"
    echo ""
    echo "üìä Available Services:"
    echo "   ‚Ä¢ REST API:       http://localhost:$api_port"
    echo "   ‚Ä¢ SSH Workers:    localhost:$ssh_port"
    echo "   ‚Ä¢ Web Interface:  http://localhost:$web_port"
    echo ""
    echo "üìÅ Accessible Directories:"
    echo "   ‚Ä¢ Workspace:      $HELIX_ROOT/workspace"
    echo "   ‚Ä¢ Projects:       $HELIX_ROOT/projects"
    echo "   ‚Ä¢ Shared:         $HELIX_ROOT/shared"
    echo ""
    echo "üîß Quick Commands:"
    echo "   ‚Ä¢ $0 cli          - Run CLI commands"
    echo "   ‚Ä¢ $0 tui          - Open Terminal UI"
    echo "   ‚Ä¢ $0 status       - Check container status"
    echo "   ‚Ä¢ $0 logs         - View container logs"
    echo ""
}

# Function to ensure container is running
ensure_container_running() {
    if ! is_container_running; then
        print_warning "HelixCode container is not running"
        print_info "Starting container automatically..."
        start_container
        
        # Wait a bit for services to initialize
        print_info "Waiting for services to initialize..."
        sleep 5
        
        if ! is_container_running; then
            print_error "Failed to start container automatically"
            print_info "Check logs with: $0 logs"
            exit 1
        fi
        
        print_success "Container started successfully"
    fi
}

# Function to execute commands in the container
exec_in_container() {
    ensure_container_running
    
    # Check if non-interactive mode is requested
    local non_interactive=false
    
    # Parse arguments to find --non-interactive flag
    for arg in "$@"; do
        if [[ "$arg" == "--non-interactive" ]]; then
            non_interactive=true
            break
        fi
    done
    
    if [ "$non_interactive" = true ]; then
        # Use non-interactive mode (no -t flag)
        docker exec -i helixcode /app/cli "$@"
    else
        # Use interactive mode (with -t flag)
        docker exec -it helixcode /app/cli "$@"
    fi
}

# Function to show container logs
show_logs() {
    local compose_cmd=$(get_compose_cmd)
    $compose_cmd -f "$HELIX_ROOT/docker-compose.helix.yml" logs "$@"
}

# Function to show container status
show_status() {
    local status=$(get_container_status)
    local compose_cmd=$(get_compose_cmd)
    
    case "$status" in
        "running")
            print_success "HelixCode container is running"
            echo ""
            $compose_cmd -f "$HELIX_ROOT/docker-compose.helix.yml" ps
            echo ""
            display_connection_info
            ;;
        "stopped")
            print_warning "HelixCode container is stopped"
            echo ""
            $compose_cmd -f "$HELIX_ROOT/docker-compose.helix.yml" ps -a
            echo ""
            print_info "Start with: $0 start"
            ;;
        "not_created")
            print_info "HelixCode container is not created"
            echo ""
            print_info "Start with: $0 start"
            print_info "Or use any command (cli, tui, etc.) to auto-start"
            ;;
    esac
}

# Function to show help
show_help() {
    echo "HelixCode Docker Facade Script"
    echo ""
    echo "DESCRIPTION:"
    echo "  Unified interface for managing and interacting with HelixCode Docker containers."
    echo "  Automatically starts containers when needed for commands like cli, tui, etc."
    echo ""
    echo "USAGE:"
    echo "  $0 [COMMAND] [OPTIONS]"
    echo ""
    echo "COMMANDS:"
    echo "  start           Start all HelixCode containers"
    echo "  stop            Stop all HelixCode containers"
    echo "  restart         Restart all HelixCode containers"
    echo "  status          Show container status and connection information"
    echo "  logs [SERVICE]  Show container logs (optional: specific service name)"
    echo "  cli [ARGS]      Execute CLI commands (auto-starts container if needed)"
    echo "  tui             Start Terminal UI (auto-starts container if needed)"
    echo "  server          Start REST API server (auto-starts container if needed)"
    echo "  exec COMMAND    Execute arbitrary command in container"
    echo "  help            Show this help message"
    echo ""
    echo "EXAMPLES:"
    echo "  $0 start                    # Start all containers"
    echo "  $0 cli --help               # Show CLI help (auto-starts if needed)"
    echo "  $0 cli --list-workers       # List workers via CLI"
    echo "  $0 cli --health             # Run health check"
    echo "  $0 cli --prompt 'Hello'     # Generate with LLM"
    echo "  $0 tui                      # Start terminal UI"
    echo "  $0 logs                     # Show all container logs"
    echo "  $0 logs helixcode           # Show main container logs"
    echo "  $0 status                   # Show status and connection info"
    echo ""
    echo "AUTO-START BEHAVIOR:"
    echo "  Commands like 'cli', 'tui', 'server' will automatically start the container"
    echo "  if it's not running. No need to manually run 'start' first."
    echo ""
    echo "ENVIRONMENT VARIABLES (in .env file):"
    echo "  HELIX_API_PORT     REST API server port (default: 8080)"
    echo "  HELIX_SSH_PORT     SSH worker connections port (default: 2222)"
    echo "  HELIX_WEB_PORT     Web interface port (default: 3000)"
    echo "  HELIX_NETWORK_MODE Network mode: standalone/distributed (default: standalone)"
    echo "  HELIX_AUTO_PORT    Auto-adjust ports if occupied (default: true)"
    echo "  HELIX_DATABASE_PASSWORD Database password (required)"
    echo "  HELIX_AUTH_JWT_SECRET JWT secret key (required)"
    echo "  HELIX_REDIS_PASSWORD Redis password (required)"
    echo ""
    echo "DIRECTORIES:"
    echo "  ./workspace/      Main working directory (mounted to container)"
    echo "  ./projects/       Project storage (mounted to container)"
    echo "  ./shared/         Shared configuration (mounted to container)"
    echo ""
    echo "SERVICES:"
    echo "  REST API:        http://localhost:8080 (configurable)"
    echo "  SSH Workers:     localhost:2222 (configurable)"
    echo "  Web Interface:   http://localhost:3000 (configurable)"
    echo ""
    echo "SEE ALSO:"
    echo "  DOCKER_SETUP.md    - Comprehensive setup documentation"
    echo "  README_DOCKER.md   - Quick start guide"
    echo ""
}

# Main execution
main() {
    # Load environment
    load_env
    
    # Check dependencies
    check_docker
    check_docker_compose
    
    local command="${1:-help}"
    
    case "$command" in
        "start")
            start_container
            ;;
        "stop")
            stop_container
            ;;
        "restart")
            restart_container
            ;;
        "status")
            show_status
            ;;
        "logs")
            show_logs "${@:2}"
            ;;
        "cli")
            exec_in_container "${@:2}"
            ;;
        "tui")
            exec_in_container tui "${@:2}"
            ;;
        "server")
            exec_in_container server "${@:2}"
            ;;
        "exec")
            if [ -z "$2" ]; then
                print_error "No command specified for exec"
                exit 1
            fi
            docker exec -it helixcode "${@:2}"
            ;;
        "help"|"--help"|"-h")
            show_help
            ;;
        *)
            print_error "Unknown command: $command"
            echo ""
            show_help
            exit 1
            ;;
    esac
}

# Run main function
main "$@"