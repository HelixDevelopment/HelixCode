# HelixCode Production Environment Variables

# Authentication
HELIX_AUTH_JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production

# Database
HELIX_DATABASE_PASSWORD=your-secure-database-password

# Redis
HELIX_REDIS_PASSWORD=your-secure-redis-password

# Grafana (optional)
GRAFANA_ADMIN_PASSWORD=admin

# Environment
HELIX_ENV=production

# Optional: External services
# HELIX_OPENAI_API_KEY=your-openai-api-key

# Notification Integrations
# Slack (Webhook)
# HELIX_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXX

# Telegram (Bot API)
# HELIX_TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# HELIX_TELEGRAM_CHAT_ID=123456789

# Email (SMTP)
# HELIX_EMAIL_SMTP_SERVER=smtp.gmail.com
# HELIX_EMAIL_SMTP_PORT=587
# HELIX_EMAIL_USERNAME=your-email@gmail.com
# HELIX_EMAIL_PASSWORD=your-app-password-here
# HELIX_EMAIL_FROM=your-email@gmail.com
# HELIX_EMAIL_RECIPIENTS=admin@example.com,team@example.com

# Discord (Webhook)
# HELIX_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# =============================================================================
# DOCKER DEPLOYMENT CONFIGURATION (for docker-compose files)
# =============================================================================

# Database Configuration (Docker)
DATABASE_PASSWORD=changeme
DATABASE_SSL_MODE=disable
PG_SHARED_BUFFERS=256MB
PG_MAX_CONNECTIONS=200
PG_WORK_MEM=4MB

# Redis Configuration (Docker)
REDIS_PASSWORD=changeme
REDIS_MAX_MEMORY=512mb
REDIS_ENABLED=true

# Aurora OS Configuration (Security-Focused Platform)
AURORA_SECURITY_LEVEL=enhanced  # standard, enhanced, maximum
AURORA_MONITORING=true
AURORA_MONITORING_INTERVAL=30
AURORA_AUDIT_LOGGING=true
AURORA_AUDIT_RETENTION=365
AURORA_AUDIT_ENCRYPTION=true
AURORA_ENCRYPTION=true
AURORA_RATE_LIMITING=true
AURORA_MFA_REQUIRED=false
AURORA_PROMETHEUS=true

# Harmony OS Configuration (Distributed Computing Platform)
HARMONY_DISTRIBUTED_ENABLED=true
HARMONY_DISTRIBUTED_WORKERS=true
HARMONY_DISTRIBUTED_TASKS=true
HARMONY_SYNC_ENABLED=true
HARMONY_SYNC_INTERVAL=30
HARMONY_AI_ACCEL=true
HARMONY_GPU_ENABLED=true
HARMONY_NPU_ENABLED=false
HARMONY_RESOURCE_OPT=true
HARMONY_MONITORING=true
HARMONY_MULTI_SCREEN=true
HARMONY_SUPER_DEVICE=true
HARMONY_SERVICE_DISCOVERY=true
HARMONY_SERVICE_FAILOVER=true
HARMONY_HEALTH_CHECK=15
WORKERS_HEALTH_CHECK=30
HARMONY_MAX_TASKS=20
HARMONY_LOG_DISTRIBUTED=true

# Task Management
TASKS_CHECKPOINT=300
TASKS_MAX_RETRIES=3

# Authentication (Docker)
AUTH_TOKEN_EXPIRY=86400
AUTH_SESSION_EXPIRY=604800

# Logging (Docker)
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring (for combined deployment with --profile monitoring)
GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD is already defined above

# Production Settings
PRODUCTION_MODE=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Development Settings
DEV_MODE=false
DEBUG=false
HOT_RELOAD=false