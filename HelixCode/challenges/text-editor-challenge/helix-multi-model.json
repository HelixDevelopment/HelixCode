{
  "name": "Text Editor Challenge - Multi-Model Approach",
  "description": "Cross-platform text editor using specialized LLMs for different components",
  "version": "1.0.0",
  "type": "challenge",
  "application": {
    "name": "TextCraft Editor",
    "description": "Modern cross-platform text editor",
    "platforms": ["desktop", "mobile", "web"],
    "technologies": {
      "frontend": "React with TypeScript",
      "backend": "Node.js with Express",
      "desktop": "Electron",
      "mobile": "React Native",
      "database": "SQLite",
      "testing": "Jest + Cypress",
      "build": "Webpack + Babel"
    }
  },
  "llm": {
    "selection_strategy": "specialized",
    "providers": {
      "ui_ux": {
        "provider": "anthropic",
        "model": "claude-4-sonnet",
        "specialization": "UI/UX design and React components",
        "max_tokens": 6144,
        "temperature": 0.2
      },
      "backend": {
        "provider": "openai",
        "model": "gpt-4-turbo",
        "specialization": "Backend architecture and API design",
        "max_tokens": 4096,
        "temperature": 0.1
      },
      "mobile": {
        "provider": "google",
        "model": "gemini-2.0-pro",
        "specialization": "React Native and mobile development",
        "max_tokens": 8192,
        "temperature": 0.3
      },
      "testing": {
        "provider": "openrouter",
        "model": "deepseek-r1-free",
        "specialization": "Test generation and quality assurance",
        "max_tokens": 4096,
        "temperature": 0.1
      },
      "documentation": {
        "provider": "xai",
        "model": "grok-3-mini-fast-beta",
        "specialization": "Documentation and technical writing",
        "max_tokens": 3072,
        "temperature": 0.4
      }
    },
    "fallback_enabled": true,
    "coordination_model": "claude-4-sonnet"
  },
  "workflow": {
    "mode": "coordinated",
    "checkpoint_interval": 180,
    "auto_recovery": true,
    "parallel_tasks": true,
    "max_concurrent_tasks": 3
  },
  "features": {
    "syntax_highlighting": true,
    "multiple_files": true,
    "themes": ["light", "dark", "auto"],
    "spell_check": true,
    "auto_complete": true,
    "split_view": true,
    "tabs": true,
    "export": ["pdf", "html", "markdown", "docx"],
    "collaboration": true,
    "version_control": true
  },
  "testing": {
    "coverage_target": 100,
    "unit_tests": "Jest",
    "integration_tests": "Jest",
    "e2e_tests": "Cypress",
    "performance_tests": true,
    "accessibility_tests": true,
    "security_tests": true
  },
  "build_targets": [
    "web",
    "desktop-windows",
    "desktop-macos", 
    "desktop-linux",
    "mobile-ios",
    "mobile-android"
  ],
  "deliverables": [
    "source_code",
    "build_scripts",
    "test_suite",
    "documentation",
    "user_manual",
    "api_docs",
    "deployment_guide",
    "performance_analysis"
  ]
}